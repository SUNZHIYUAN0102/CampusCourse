@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Totle = "All Roles";
}

<h1>All Roles</h1>

<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Admin">Add Role</a>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                RoleId: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteRoles" asp-controller="Admin" asp-route-id="@role.Id">
                    <a class="btn btn-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                    <span id="confirmSpan_@role.Id" style="display:none">
                        <span>Are you sure you want to delete this role?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}



@section Scripts{
    <script src="~/js/site.js"></script>
}
