@model CampusCourse.Models.Group

<a asp-action="Create" asp-controller="Prototypes" asp-route-groupId="@Model.Id" class="btn btn-primary" style="margin-bottom: 5px;">Add Prototypes</a>

<table class="table table-striped" id="Exampledatatable">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prototypes)
        {
            <tr>
                <th scope="row"><a asp-action="Details" asp-controller="Prototypes" asp-route-id="@item.Id">@item.Name</a></th>

                <td>Prototype</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-controller="Prototypes" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Prototypes" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>


@section Scripts {

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#Exampledatatable").DataTable();
        });
    </script>
}
